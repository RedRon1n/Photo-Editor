{% extends "templates/layouts/base.twig" %}

{% set title = "Deepnude - Login" %}

{% block page %}
    <main class="bg-auth bg-cover bg-center bg-no-repeat bg-fixed">
        <section class="flex items-center min-h-screen md:p-0 pt-20 pb-6 px-6 justify-center md:inset-10 backdrop-blur-3xl">
            <a href="/" class="absolute top-6 left-6">
                <img src="/src/assets/images/logo.svg" alt="" class="h-6">
            </a>
            <a href="#" class="absolute top-6 right-6">
                <img src="/src/assets/images/xmark.svg" alt="" class="h-3">
            </a>
            <div class="bg-white bg-opacity-10 md:w-[36.5rem] w-full md:px-20 px-6 py-8 text-center md:rounded-[2rem] rounded-2xl">
                <div class="font-semibold text-3xl">Log In to Deepnude</div>
                <div class="flex justify-center gap-x-4 mt-3 mb-12">
                    <div class="opacity-50">Donâ€™t have an account?</div>
                    <a href="/auth-signup" class="text-flush-orange underline font-semibold">Sign up</a>
                </div>
                <a href="#" class="flex justify-center items-center gap-x-2 h-11 bg-white bg-opacity-10 rounded border-geyser border border-opacity-20">
                    <img src="/src/assets/images/google.svg" alt="" class="h-6">
                    <span class="font-semibold">Sign in with Google</span>
                </a>
                <div class="flex items-center gap-x-3 my-8">
                    <hr class="flex-1 border-white border-opacity-20">
                    <div>
                        Or continue with email
                    </div>
                    <hr class="flex-1 border-white border-opacity-20">
                </div>
                <form action="#">
                    <input type="email" placeholder="Insert your email" class="w-full h-11 px-4 mb-6 text-sm placeholder-opacity-50 !outline-0 bg-white bg-opacity-5 rounded border border-geyser border-opacity-10 focus:border-flush-orange focus:border-opacity-100">
                    <input type="password" placeholder="Insert your password" class="w-full h-11 px-4 mb-6 text-sm placeholder-opacity-50 !outline-0 bg-white bg-opacity-5 rounded border border-geyser border-opacity-10 focus:border-flush-orange focus:border-opacity-100">
                    <div class="flex items-center mb-8">
                        <input id="keep-me-logged-in-checkbox" type="checkbox" class="w-5 h-5 mr-3 relative rounded bg-white bg-opacity-10 border-geyser border-2 border-opacity-20 appearance-none after:absolute after:inset-0 after:content-[url(/src/assets/images/check.svg)] after:flex after:justify-center after:items-center after:opacity-0 checked:after:opacity-100">
                        <label for="keep-me-logged-in-checkbox" class="text-opacity-70">Keep me logged in</label>
                        <a href="#" class="ml-auto text-flush-orange">
                            Forgot password?
                        </a>
                    </div>
                    <button type="submit" class="rounded-full bg-white bg-opacity-10 px-6 py-2.5 relative border border-red-600 border-opacity-0 duration-300 ease-in-out group active:border-opacity-20">
                        <span>Log in</span>
                        <img src="/src/assets/images/diamond-blur.svg" alt="" class="absolute h-2 -bottom-1 left-1/2 -translate-x-1/2 opacity-0 duration-300 ease-in-out group-hover:opacity-100">
                    </button>
                </form>
            </div>
        </section>
    </main>
{% endblock %}